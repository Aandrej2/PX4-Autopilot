# # For logging (can use MAVLINK)
CONFIG_MODULES_LOGGER=y

# # Add mavlink module (needs DATAMAN (uses dataman_client))
CONFIG_MODULES_MAVLINK=y
CONFIG_MAVLINK_DIALECT="rocket"

# # Enables ROS2 topics cross computer communication
# CONFIG_MODULES_UXRCE_DDS_CLIENT=y

# # API for persistent storage (file, flash, fram, ram)
CONFIG_MODULES_DATAMAN=y

